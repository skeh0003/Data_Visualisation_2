

    {
        "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
        "width": 300,
        "height": 300,
        "title": "Change in Unit Labour Cost",
        "data": {
            "url": "./unit_labour_cost.csv",
            "format": {"type": "csv"}
        },
        "layer": [
            {
            "mark": {
                "type": "line",
                "point": {"size": 75, "filled": true}
            },
            "encoding": {
                "x": {
                "field": "Year",
                "type": "ordinal",
                "axis": {
                    "title": "Year",
                    "labelAngle": 45
                }
                },
                "y": {
                "field": "cost",
                "type": "quantitative",
                "axis": {"title": "Change in Unit Labour Cost (%)"}
                },
                "tooltip": [
                {"field": "Year", "type": "ordinal", "title": "Year"},
                {"field": "cost", "type": "quantitative", "title": "Change in Unit Labour Cost (%)"}
                ]
            }
            },
            {
                "mark": {
                  "type": "text",
                  "align": "left",
                  "dx": -190,
                  "dy": -10,
                  "fontSize": 12,
                  "font": "Arial",
                  "fontWeight": "lighter"
                },
                "encoding": {
                  "x": {"datum": "2021", "type": "ordinal"},
                  "y": {"datum": 2.5, "type": "quantitative"}, 
                  "text": {"value": "Peak Change in Unit Labour Cost"}
                }
              }
        ],
        "config": {
            "line": {
            "strokeWidth": 2
    
        }
        }
    }